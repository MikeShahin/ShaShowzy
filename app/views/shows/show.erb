<h2>All submited shows!</h2>

<div class="shows">
  <h3>Click on an event for more info!</h3>
  <table>
      <tr>
        <th>Date</th>
        <th>Name</th>
        <th>Location</th>
      </tr>
    <% @shows.each do |p| %>
      <tr>
        <th><%=p.date%></th>
        <th><a href="/shows/<%=p.id%>"><%= p.name %></a></th>
        <th><%=p.location%></th>

      </tr>
    <% end %>
  </table>
</div>

